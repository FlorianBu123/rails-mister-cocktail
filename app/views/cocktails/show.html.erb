<p>
<strong>Name</strong>
<%= @cocktail.name %>
</p>


<p>Doses for <%= @cocktail.name %>:</h5>
<ul>
<% @cocktail.doses.each do |dose| %>
<li><%= dose.description %></li>
<li>  <%= link_to "delete", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
</li>
<% end %>
</ul>


<p>Ingredients for <%= @cocktail.name %>:</h5>
<ul>
<% @cocktail.ingredients.each do |ingredient| %>
<li><%= ingredient.name %></li>
<% end %>
</ul>

<%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail) %> | <%= link_to 'Back', cocktails_path %>
